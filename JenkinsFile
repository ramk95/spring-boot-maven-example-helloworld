pipeline {
    agent any
    stages{
        stage('build the app'){
            steps {
                sh "docker build -t build-${BUILD_NUMBER} ."
            }
        }

        stage("Tag and Push") {
                environment { 
                    GIT_TAG = "build-$BUILD_NUMBER"
                }
                steps {
                    sh('''
                        git config user.name 'jenkins_user'
                        git config user.email 'ramakrishnan.h.1995@gmail.com'
                        git tag \$GIT_TAG
                    ''')
                
                    sshagent(credentials: ['github-ssh-key']) {
                        echo '$BRANCH_NAME'
                        sh "git push origin $GIT_TAG"
                    }
                }
        }

        stage ('clean up dangling images'){
            steps{
                sh "docker system prune --all -f"
            }
        }
    }
}
